---
import { Image } from "astro:assets";
import Cake1 from "../assets/chanelCake.jpg";
import Cake2 from "../assets/faceCake.jpg";
import Cake3 from "../assets/jungleCake.jpg";

const cakes = [
  { src: Cake1, alt: "Chanel Cake" },
  { src: Cake2, alt: "Face Cake" },
  { src: Cake3, alt: "Jungle Cake" },
];
---

<div
  class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center text-center position-relative"
>
  <div class="blaze-slider w-100 mb-4">
    <div class="blaze-container">
      <div class="blaze-track-container">
        <div class="blaze-track">
          {
            cakes.map((cake) => (
              <div class="d-flex justify-content-center">
                <Image
                  src={cake.src}
                  alt={cake.alt}
                  class="img-fluid rounded-4"
                  style="max-width: 400px; height: auto;"
                />
              </div>
            ))
          }
        </div>
      </div>
      <!-- Previous and Next buttons if necessary -->
      <!-- <div class="pt-4"> -->
      <!--   <button class="blaze-prev btn btn-outline-dark">Previous</button> -->
      <!--   <button class="blaze-next btn btn-outline-dark">Next</button> -->
      <!-- </div> -->
    </div>
  </div>
  <div class="px-4 pt-3 position-relative">
    <h1 class="display-4 fw-bold">Sweeten Your Celebrations</h1>
    <div class="col-lg-8 mx-auto">
      <p class="lead mb-4">
        Welcome to Flavia's Sweets! We create exquisite cakes and delicious
        sweets, perfect for any occasion, right here in the South Florida area,
        including Hollywood and Miami.
      </p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
        <a href="#contact" class="btn btn-primary btn-lg px-4">Order now</a>
      </div>
    </div>
  </div>
</div>

<script>
  import BlazeSlider from "blaze-slider";
  import "blaze-slider/dist/blaze.css";
  const el = document.querySelector(".blaze-slider");
  new BlazeSlider(el, {
    all: {
      enableAutoplay: true,
      autoplayInterval: 4000,
      transitionDuration: 900,
    },
  });
</script>

<style is:global>
  .blaze-slider {
    max-width: 900px;
    margin: 0 auto;
  }
  .blaze-track {
    gap: 1rem;
  }
  .blaze-prev,
  .blaze-next {
    margin: 0 0.5rem;
  }
  .overlay {
    z-index: 1;
  }
  .position-relative {
    z-index: 2;
  }
</style>
